{
    "manifest_version": 2,
    "name": "Instagram Volume Mixer",
    "description": "idk why they dont have that feauture yet. Thanks for using it!",
    "version": "1.0",
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
        {
            "matches": [
                "https://www.instagram.com/reels/*",
                "https://www.instagram.com/*"
            ],
            "js": ["./scripts/volume-mixer.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "./popup/popup.html",
        "default_icon": {
            "16": "images/16.png",
            "48": "images/48.png",
            "128": "images/128.png"
        }
    }
}
